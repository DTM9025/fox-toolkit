SHELL     = /bin/sh
CC        = @CC@
CXX       = @CXX@
CPP       = @CPP@
RM        = rm -f
AR        = ar rc
RANLIB    = @RANLIB@
SRCDIR    = @srcdir@
TOPDIR    = @top_srcdir@
CFLAGS    = @CFLAGS@
CXXFLAGS  = @CXXFLAGS@
DEFINES   = @DEFS@
CPPFLAGS  = @CPPFLAGS@
LDFLAGS   = @LDFLAGS@
X11LIBS   = @X_PRE_LIBS@ -lXext -lX11 @X_EXTRA_LIBS@
GLLIBS    = @GL_LIBS@
INCDIRS   = -I$(TOPDIR)/include @X_CFLAGS@
LIBDIRS   = @X_LIBS@ -L$(TOPDIR)/lib

.SUFFIXES: .cpp .c


PROGRAMS  = reswrap uuidgen

SOURCES = clstab.cpp reswrap.cpp uuidgen.cpp


OBJECTS = $(SOURCES:.cpp=.o)

.cpp.o:
	$(CXX) -c $(INCDIRS) $(CXXFLAGS) $(DEFINES) $*.cpp

all: $(PROGRAMS)

drop: $(PROGRAMS)
	for i in $(PROGRAMS); do \
	cp $$i $(DROPDIR)/bin/$(ARCH)/$$i; \
	done

clstab: $(FOXLIB) clstab.o
	$(CXX) -o $@ $(LDFLAGS) $(LIBDIRS) clstab.o -lm $(X11LIBS)

reswrap: $(FOXLIB) reswrap.o
	$(CXX) -o $@ $(LDFLAGS) $(LIBDIRS) reswrap.o -lm $(X11LIBS)

uuidgen: $(FOXLIB) uuidgen.o
	$(CXX) -o $@ $(LDFLAGS) $(LIBDIRS) uuidgen.o -lm $(X11LIBS)

clean:
	$(RM) *.o *~

realclean: clean
	$(RM) $(PROGRAMS)
	$(RM) Makefile

dep: $(SOURCES)
	$(CXX) -I../include -MM $(SOURCES) >depend

include depend
