SHELL     = /bin/sh
CC        = @CC@
CXX       = @CXX@
CPP       = @CPP@
RM        = rm -f
AR        = ar rc
NM        = nm
CLSTAB    = ../utils/clstab
RANLIB    = @RANLIB@
SRCDIR    = @srcdir@
TOPDIR    = @top_srcdir@
CFLAGS    = @CFLAGS@
CXXFLAGS  = @CXXFLAGS@
DEFINES   = @DEFS@
CPPFLAGS  = @CPPFLAGS@
LDFLAGS   = @LDFLAGS@
X11LIBS   = @X_PRE_LIBS@ -lXext -lX11 @X_EXTRA_LIBS@
GLLIBS    = @GL_LIBS@
INCDIRS   = -I$(TOPDIR)/include @X_CFLAGS@
LIBDIRS   = @X_LIBS@ -L$(TOPDIR)/lib
FOXLIB    = $(TOPDIR)/lib/libFOX.a
RESWRAP   = $(TOPDIR)/utils/reswrap


.SUFFIXES: .cpp .c


SOURCES = PathFinder.cpp


OBJECTS = $(SOURCES:.cpp=.o) icons.o


ICONS = bigicons.gif details.gif smallicons.gif minipenguin.gif bigpenguin.gif\
	dirup.gif


.cpp.o:
	$(CXX) -c $(INCDIRS) $(CXXFLAGS) $(DEFINES) $*.cpp


PathFinder: $(FOXLIB) $(OBJECTS)
	$(CXX) -o $@ $(LDFLAGS) $(LIBDIRS) $(OBJECTS) -lFOX -lstdc++ -lm $(X11LIBS)


drop:
	cp PathFinder $(DROPDIR)/bin/$(ARCH)/PathFinder


icons.h: $(ICONS)
	$(RESWRAP) -i -o icons.h $(ICONS)


icons.cpp: $(ICONS)
	$(RESWRAP) -e -o icons.cpp $(ICONS)


clean:
	$(RM) *.o *~ core


realclean: clean
	$(RM) PathFinder
	$(RM) Makefile
	$(RM) icons.cpp
	$(RM) icons.h


dep: $(SOURCES) icons.h icons.cpp
	gcc -I../include -MM $(SOURCES) >depend


include depend

